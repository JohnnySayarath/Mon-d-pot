@{
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Html.DisplayNameForInnerType((Marmoset m)  => m.Name)</th>
            <th scope="col">@Html.DisplayNameForInnerType((Marmoset m)  => m.Age)</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Marmoset marmoset in Model)
        {
            <tr>
                <th scope="row">@marmoset.Id</th>
                <td>@marmoset.Name</td>
                <td>@marmoset.Age</td>
                <td><a asp-action="Details" asp-route-id="@marmoset.Id" class="btn btn-primary">Details</a></td>
                <td><a asp-action="DeleteMarmoset" asp-route-id="@marmoset.Id" class="btn btn-primary">Delete</a></td>

            </tr>
        }

    </tbody>
</table>

