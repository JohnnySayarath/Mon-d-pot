@model List<Marmoset>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Accueil Marmosets";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            
            <th scope="col">@Html.DisplayNameForInnerType((Marmoset m) => m.Name)</th>
            <th scope="col">@Html.DisplayNameForInnerType((Marmoset m) => m.Age)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (Marmoset m in Model)
        {
            <tr>
                <th scope="row">@m.Id</th>
                <td>@m.Name</td>
                <td>@m.Age</td>
                <td><a asp-action="Details" asp-route-id="@m.Id" class="btn btn-primary">Détails</a></td>
            </tr>
        }
    </tbody>
</table>